                        <span class="badge bg-primary">Podcaster</span>
                    </div>
                    <div class="col-md-8">
                        <h6>Account Information</h6>
                        <table class="table table-sm">
                            <tr><td>Email:</td><td>john.doe@email.com</td></tr>
                            <tr><td>Joined:</td><td>January 15, 2025</td></tr>
                            <tr><td>Last Login:</td><td>2 hours ago</td></tr>
                            <tr><td>Status:</td><td><span class="badge bg-success">Active</span></td></tr>
                        </table>
                        
                        <h6 class="mt-3">Activity Summary</h6>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-mic me-2"></i>3 Podcasts Created</li>
                            <li><i class="bi bi-collection-play me-2"></i>24 Episodes Published</li>
                            <li><i class="bi bi-eye me-2"></i>12,547 Total Views</li>
                            <li><i class="bi bi-chat-dots me-2"></i>156 Comments Received</li>
                        </ul>
                    </div>
                </div>
            `;
            modal.show();
        }

        function editUser(userId) {
            PodStream.showToast('Edit user functionality would be implemented here', 'info');
        }

        function suspendUser(userId) {
            PodStream.confirmAction('Are you sure you want to suspend this user?', () => {
                // API call to suspend user
                PodStream.showToast('User suspended successfully', 'warning');
            });
        }

        function activateUser(userId) {
            PodStream.confirmAction('Are you sure you want to activate this user?', () => {
                // API call to activate user
                PodStream.showToast('User activated successfully', 'success');
            });
        }

        function deleteUser(userId) {
            PodStream.confirmAction('Are you sure you want to permanently delete this user? This action cannot be undone.', () => {
                // API call to delete user
                PodStream.showToast('User deleted successfully', 'danger');
            });
        }

        // Filter buttons
        document.querySelectorAll('[data-filter]').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('[data-filter]').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                
                const filter = this.dataset.filter;
                // Apply filter logic here
                console.log('Filter by:', filter);
            });
        });
    </script>
}