@{
    ViewData["Title"] = "Analytics Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">
        <i class="bi bi-graph-up text-primary me-2"></i>
        Analytics Dashboard
    </h1>
    <div class="btn-group" role="group">
        <button type="button" class="btn btn-outline-primary active" data-period="7">7 Days</button>
        <button type="button" class="btn btn-outline-primary" data-period="30">30 Days</button>
        <button type="button" class="btn btn-outline-primary" data-period="90">90 Days</button>
    </div>
</div>

<!-- Key Metrics -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Total Views</h6>
                        <h2 class="mb-0" id="totalViews">12,547</h2>
                        <small class="opacity-75">+15% from last period</small>
                    </div>
                    <i class="bi bi-eye-fill fs-1 opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Subscribers</h6>
                        <h2 class="mb-0" id="totalSubscribers">1,234</h2>
                        <small class="opacity-75">+8% from last period</small>
                    </div>
                    <i class="bi bi-people-fill fs-1 opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Comments</h6>
                        <h2 class="mb-0" id="totalComments">456</h2>
                        <small class="opacity-75">+23% from last period</small>
                    </div>
                    <i class="bi bi-chat-dots-fill fs-1 opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Avg. Listen Time</h6>
                        <h2 class="mb-0" id="avgListenTime">28m</h2>
                        <small class="opacity-75">+5% from last period</small>
                    </div>
                    <i class="bi bi-clock-fill fs-1 opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Views Chart -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Views Over Time</h5>
            </div>
            <div class="card-body">
                <canvas id="viewsChart" height="300"></canvas>
            </div>
        </div>
    </div>

    <!-- Top Episodes -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Top Episodes</h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex justify-content-between align-items-start px-0">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">Episode Title 1</div>
                            <small class="text-muted">Tech Talk Weekly</small>
                        </div>
                        <span class="badge bg-primary rounded-pill">2.5K</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-start px-0">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">Episode Title 2</div>
                            <small class="text-muted">Business Insights</small>
                        </div>
                        <span class="badge bg-primary rounded-pill">1.8K</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-start px-0">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">Episode Title 3</div>
                            <small class="text-muted">Tech Talk Weekly</small>
                        </div>
                        <span class="badge bg-primary rounded-pill">1.2K</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Detailed Analytics -->
<div class="row mt-4">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Episode Performance</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Episode</th>
                                <th>Views</th>
                                <th>Comments</th>
                                <th>Engagement</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <div class="fw-medium">AI in Business</div>
                                    <small class="text-muted">Released 2 days ago</small>
                                </td>
                                <td>2,547</td>
                                <td>45</td>
                                <td>
                                    <div class="progress" style="height: 4px;">
                                        <div class="progress-bar" style="width: 85%"></div>
                                    </div>
                                    <small class="text-muted">85%</small>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="fw-medium">Market Trends</div>
                                    <small class="text-muted">Released 5 days ago</small>
                                </td>
                                <td>1,823</td>
                                <td>32</td>
                                <td>
                                    <div class="progress" style="height: 4px;">
                                        <div class="progress-bar" style="width: 72%"></div>
                                    </div>
                                    <small class="text-muted">72%</small>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Audience Demographics</h5>
            </div>
            <div class="card-body">
                <canvas id="demographicsChart" height="200"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Views Over Time Chart
        const viewsCtx = document.getElementById('viewsChart').getContext('2d');
        const viewsChart = new Chart(viewsCtx, {
            type: 'line',
            data: {
                labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                datasets: [{
                    label: 'Views',
                    data: [1200, 1900, 3000, 2500, 2200, 3000, 2800],
                    borderColor: '#0d6efd',
                    backgroundColor: 'rgba(13, 110, 253, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Demographics Chart
        const demoCtx = document.getElementById('demographicsChart').getContext('2d');
        const demoChart = new Chart(demoCtx, {
            type: 'doughnut',
            data: {
                labels: ['18-24', '25-34', '35-44', '45-54', '55+'],
                datasets: [{
                    data: [15, 35, 25, 15, 10],
                    backgroundColor: [
                        '#0d6efd',
                        '#198754',
                        '#ffc107',
                        '#dc3545',
                        '#6c757d'
                    ]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // Period selector
        document.querySelectorAll('[data-period]').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('[data-period]').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                
                const period = this.dataset.period;
                loadAnalyticsData(period);
            });
        });

        function loadAnalyticsData(period) {
            // In a real implementation, this would fetch data from the API
            console.log('Loading analytics for period:', period);
            
